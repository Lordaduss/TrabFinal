void escolhas(){
    printf("Escolha: \n1.Bubble sort \n2.Selection sort \n3.Insertion sort \n4.Busca sequencial \n5.Busca binÃ¡ria");
}

void printvet(int v[],int n){
    int i;
    for (i=0;i<n;i++){
        printf("%d ",v[i];)
    }
}

